# VehicAid Infrastructure Environment Variables
# Copy this file to .env and update with your actual values

# Google Maps API Key (required for location features)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database Configuration
POSTGRES_DB=vehic_aid
POSTGRES_USER=vehic_aid
POSTGRES_PASSWORD=vehic_aid123

# Django Secret Key (change in production!)
SECRET_KEY=dev-secret-key-change-in-production-12345

# Debug Mode (set to False in production)
DEBUG=True

# Redis Configuration
REDIS_URL=redis://redis:6379/1
CHANNEL_REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Database URL
DATABASE_URL=postgres://vehic_aid:vehic_aid123@db:5432/vehic_aid

# Payment Gateway (optional - choose one)
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret
# STRIPE_PUBLIC_KEY=your_stripe_public_key
# STRIPE_SECRET_KEY=your_stripe_secret_key

# Email Configuration (optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# EMAIL_USE_TLS=True

# AWS S3 Configuration (optional - for media storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=ap-south-1

# Sentry (optional - for error tracking)
# SENTRY_DSN=your_sentry_dsn

# Application URLs (for CORS and allowed hosts)
ALLOWED_HOSTS=localhost,127.0.0.1,web
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3003
