{
  "name": "vehic-aid-mobile",
  "version": "1.0.0",
  "description": "VehicAid Mobile Apps - Booker & Provider",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "private": true,
  "scripts": {
    "dev:booker": "cd apps/booker && npx expo start --clear",
    "dev:provider": "cd apps/provider && npx expo start --clear",
    "build:booker": "cd apps/booker && npx expo build:android && npx expo build:ios",
    "build:provider": "cd apps/provider && npx expo build:android && npx expo build:ios",
    "prebuild:booker": "cd apps/booker && npx expo prebuild --clean",
    "prebuild:provider": "cd apps/provider && npx expo prebuild --clean",
    "setup": "yarn install && echo 'Setup complete!'",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "metro": "^0.80.12",
    "typescript": "^5.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "expo": "^54.0.21",
    "expo-font": "^14.0.0",
    "expo-splash-screen": "^0.27.0",
    "react-native-linear-gradient": "^2.8.3"
  }
}
